@model WebApplication.Models.Patrocinador

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/Content/login.css" />
}
<div class="formulario-container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-flex">
        <h4>Patrocinador</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "input-estilo" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="">
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "input-estilo" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="">
            @Html.LabelFor(model => model.TransmisionDiaria, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="">
                @Html.EditorFor(model => model.TransmisionDiaria, new { htmlAttributes = new { @class = "input-estilo" } })
                @Html.ValidationMessageFor(model => model.TransmisionDiaria, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            @Html.Label("Imagen", htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                <input type="file" name="Imagen" class="input-estilo" />
                @Html.ValidationMessage("Imagen", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="">
            <div class="">
                <input type="submit" value="Create" class="input-btn" />
            </div>
        </div>
    </div>
        <br />
        <div>
            <a href="@Url.Action("Index")" class="volver">Volver</a>
        </div>
    }


</div>

