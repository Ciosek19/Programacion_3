@model WebApplication.Models.Permiso

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/Content/login.css" rel="stylesheet" />
}
<div class="formulario-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-flex">
            <h4>Editar Permiso</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "input-estilo" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="">
                <div class="">
                    <input type="submit" value="Save" class="input-btn" />
                </div>
            </div>
        </div>
    }

    <div>
        <a href="@Url.Action("Index")" class="volver">Volver</a>
    </div>
</div>