@model WebApplication.Models.Noticia

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/Content/login.css" rel="stylesheet" />
}

<div class="formulario-container">
    @using (Html.BeginForm("Create", "Noticias", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-flex">
            <h4>Nueva Noticia</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="">
                @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.TextBoxFor(model => model.Titulo, new { @class = "input-estilo" })
                    @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="">
                @Html.LabelFor(model => model.Contenido, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.TextAreaFor(model => model.Contenido, new { @class = "input-estilo", rows = 5 })
                    @Html.ValidationMessageFor(model => model.Contenido, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="">
                @Html.LabelFor(model => model.FechaPublicacion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    @Html.TextBoxFor(model => model.FechaPublicacion, new
                    {
                        @class = "input-estilo",
                        type = "datetime-local",
                        value = Model.FechaPublicacion != DateTime.MinValue
                            ? Model.FechaPublicacion.ToString("yyyy-MM-ddTHH:mm")
                            : ""
                    })
                    @Html.ValidationMessageFor(model => model.FechaPublicacion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="">
                @Html.Label("Imagen", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="">
                    <input type="file" name="Imagen" class="input-estilo" />
                </div>
            </div>

            <div class="">
                <div class="">
                    <input type="submit" value="Crear" class="input-btn" />
                </div>
            </div>
        </div>
    }
    <br />
    <div>
        <a href="@Url.Action("Index")" class="volver">Volver</a>
    </div>
</div>
