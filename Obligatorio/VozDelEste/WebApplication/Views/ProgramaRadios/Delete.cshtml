@model WebApplication.Models.ProgramaRadio

@{
    ViewBag.Title = "Delete";
}

@section styles {
    <link href="~/Content/login.css" rel="stylesheet" />
}

<div class="formulario-container">
    <div class="form-flex">

        <dl>
            <h4>Esta seguro de eliminar esto?</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dd>
                   <img src="@Url.Content(Model.ImagenUrl)" alt="Imagen del programa" style="width: 70%; margin-bottom: 20px; object-fit:cover; border-radius:5px;" />
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="">
                    <input type="submit" value="Delete" class="input-btn" />
                </div>
                <br />
                @Html.ActionLink("Volver", "Index", null, new { @class = "volver" })
            }
    </div>

</div>
