@model WebApplication.Models.Programacion

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles {
    <link href="~/Content/login.css" rel="stylesheet" />
}
<div class="formulario-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-flex">
            <h4>Editar Programacion</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="">
                @Html.LabelFor(model => model.ProgramaID, "Selecciona el Programa", htmlAttributes: new { @class = "" })
                <div class="">
                    @Html.DropDownList("ProgramaID", null, htmlAttributes: new { @class = "input-estilo" })
                    @Html.ValidationMessageFor(model => model.ProgramaID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="">
                @Html.LabelFor(model => model.FechaHorario, htmlAttributes: new { @class = "" })
                <div class="">
                    @Html.EditorFor(model => model.FechaHorario, new { htmlAttributes = new { @class = "input-estilo" } })
                    @Html.ValidationMessageFor(model => model.FechaHorario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="">
                <div class="">
                    <input type="submit" value="Save" class="input-btn" />
                </div>
            </div>
        </div>
    }
    <br />
    <div>
        <a href="@Url.Action("Index")" class="volver">Volver</a>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

